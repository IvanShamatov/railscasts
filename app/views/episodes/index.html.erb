<% title "Бесплатные скринкасты по Ruby on Rails", false %>

<% form_tag episodes_path, :method => 'get' do %>
  <p class="content">
    <%= text_field_tag :search, params[:search], :size=>20 %>
    <%= submit_tag "Search", :name => nil %>
 <a href="http://railscasts.ru/episodes.rss" style="float:right;"><img alt="RSS Feed" height="16" src="/images/icons/feed.gif?1277803897" width="16" /> RSS поток</a>
 
 </p>
<% end %>

<% if @episodes.empty? %>
  <p class="content">No episodes found. <%= link_to "See all episodes.", episodes_path %></p>
<% else %>
  <div class="episodes">
    <%= render @episodes %>
  </div>
<% end %>

<p class="content">
  <%= link_to h('< Назад'), :overwrite_params => { :page => @episodes.previous_page } if @episodes.previous_page %>
  <%= "|" if @episodes.previous_page && @episodes.next_page %>
  <%= link_to h('Вперед >'), :overwrite_params => { :page => @episodes.next_page } if @episodes.next_page %>
</p>

<% if admin? %>
<h1 class="content">Future Episodes</h1>
<div class="episodes">
  <%= render Episode.unpublished %>
</div>

<div class="content">
  <div class="actions">
    <p><%= link_to 'Новый выпуск', new_episode_path %></p>
  </div>
</div>
<% end %>
